{
  "name": "qr-restaurant-system",
  "version": "1.0.0",
  "description": "Beautiful QR-based restaurant ordering system",
  "main": "server.js",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\" \"npm run admin\"",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"npm run admin\"",
    "server": "nodemon backend/server.js",
    "client": "cd customer && npm start",
    "admin": "cd admin && npm start",
    "install-all": "npm install && cd customer && npm install && cd ../admin && npm install"
  },
  "keywords": ["restaurant", "ordering", "qr-code", "real-time"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.5.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0"
  }
}

